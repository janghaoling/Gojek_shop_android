<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gox.shop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.AppController"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.splash.SplashActivity" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.login.LoginActivity" />
        <activity android:name=".views.dashboard.DashboardActivity" />
        <activity android:name=".views.orderdetail.OrderDetailActivity" />
        <activity android:name="com.gox.app.ui.changepasswordactivity.ChangePasswordActivity" />
        <activity android:name="com.gox.shop.views.forgotPasswordActivity.ForgotPasswordActivity" />
    </application>

</manifest>